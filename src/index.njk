---
layout: layouts/base.njk
permalink: /
---
<div class="home-page">
    <header class="home-header">
        <h1>{{ site.title }}</h1>
        <p class="home-tagline">{{ site.description }}</p>
    </header>

    <div class="home-sections">
        <section class="home-section">
            <h2>Recent Recipes</h2>
            <div class="recipe-list">
                {% for recipe in collections.recipes | head(10) %}
                <a href="{{ recipe.url }}" class="recipe-card-link">
                    <article class="recipe-card">
                        <div class="recipe-summary">
                            {{ recipe.data.title }}
                        </div>
                    </article>
                </a>
                {% endfor %}
            </div>
            <a href="/recipes/" class="view-all">View all recipes →</a>
        </section>

        {% if collections.resources and collections.resources.length %}
        <section class="home-section">
            <h2>Resources</h2>
            <div class="recipe-list">
                {% for resource in collections.resources | head(5) %}
                <a href="{{ resource.url }}" class="recipe-card-link">
                    <article class="recipe-card">
                        <div class="recipe-summary">{{ resource.data.title }}</div>
                    </article>
                </a>
                {% endfor %}
            </div>
            <a href="/resources/" class="view-all">View all resources →</a>
        </section>
        {% endif %}
    </div>
</div>
