---
layout: layouts/base.njk
---
<div class="list-page">
    <header class="page-header">
        <h1>{{ title }}</h1>
        {% if content %}
        <div class="page-intro">{{ content | safe }}</div>
        {% endif %}
    </header>

    {% if collections[section] and collections[section].length %}
    <div class="recipe-list">
        {% for item in collections[section] %}
        <a href="{{ item.url }}" class="recipe-card-link">
            <article class="recipe-card">
                {% if item.data.title %}
                <div class="recipe-summary">{{ item.data.title }}</div>
                {% endif %}
                {% if item.data.tags %}
                {% set displayTags = item.data.tags | filterTagList | head(3) %}
                {% if displayTags.length %}
                <div class="recipe-tags">
                    {% for tag in displayTags %}
                    <span class="tag-badge">{{ tag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
                {% endif %}
            </article>
        </a>
        {% endfor %}
    </div>
    {% else %}
    <p class="no-content">No recipes found.</p>
    {% endif %}
</div>
