{
  "name": "bloob-haus",
  "version": "1.0.0",
  "description": "Transform Obsidian markdown vaults into hosted static websites using Hugo",
  "type": "module",
  "scripts": {
    "build": "node scripts/build-site.js",
    "build:hugo": "node scripts/build-site.js --target=hugo",
    "build:eleventy": "node scripts/bundle-visualizers.js && node scripts/build-site.js --target=eleventy",
    "dev": "hugo server --source hugo --buildDrafts --buildFuture",
    "dev:eleventy": "npx @11ty/eleventy --serve",
    "eleventy": "npx @11ty/eleventy"
  },
  "keywords": [
    "obsidian",
    "hugo",
    "static-site",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@flowershow/remark-wiki-link": "^3.3.1",
    "execa": "^8.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3",
    "hugo-bin": "latest",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "esbuild": "^0.27.3"
  }
}
